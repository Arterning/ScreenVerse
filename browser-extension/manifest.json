{
  "manifest_version": 3,
  "name": "ScreenVerse Recorder",
  "version": "0.1.0",
  "description": "高级屏幕录制与鼠标事件捕获，支持与Web版无缝协作。",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "打开 ScreenVerse 录屏",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["public/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 